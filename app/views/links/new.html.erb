<h3>Please enter the link you want to shorten below.</h3>
<%= form_with model: @link do |form| %>
  <div>
    <%= form.label :url %><br>
    <%= form.text_field :url %>
    <% @link.errors.full_messages_for(:url).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>